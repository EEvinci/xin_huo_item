.root{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.notice_title{
    height: 150rpx;
    margin-left: 2%;
    margin-right: 2%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2px solid #cccccc;
}

.title_left{
    font-size: 36rpx;
    font-weight: 600;
}

.title_right{
    width: 200rpx;
    height: 80rpx;
    font-size: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 20rpx;
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    background-color: #D8412B;
    color: white;
    font-weight: 600;
}

/* 具体消息部分 */
.message_detail{
    height: 120rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1px solid #cccccc;
}

.message_detail image{
    width: 50rpx;
    height: 50rpx;
    margin: 20rpx;
}

.message_right{
    display: flex;
    flex-direction: column;
    
}

.right_title{
    font-size: 30rpx;
    color: black;
}

.right_detail{
    font-size: 24rpx;
    color: grey;
}

.unread_notice{
    position: absolute;
    height: 40rpx;
    width: 40rpx;
    color: white;
    background-color: #BD3124;
    border-radius: 90rpx;
    right: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}