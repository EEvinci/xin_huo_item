Page {
    /* 全局样式 */
    background: rgb(244, 245, 249);
    height: 100%;
    position: fixed;
}

.fontColorBox,
.fontColorBox1,
.fontColorBox2 {
    /* 文字默认颜色 */
    color: #BD3124;
}

.navBox {
    /* 顶部tab盒子样式 */
    width: 100%;
    height: 108rpx;
    background: white;
    display: flex;
    align-items: center;
    flex-direction: row;
    /* 必要时拆行 */
    flex-wrap: wrap;
    justify-content: space-around;
}

.titleBox {
    /* 未选中文字的样式 */
    color: rgb(168, 170, 175);
    font-size: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.lineBox,.notLineBox{
    /* 选中及未选中底线共同样式 */
    width: 80rpx;
    height: 8rpx;
}

.lineBox {
    /* 选中底线样式 */
    background: #BD3124;
    margin-top: 16rpx;
    border-radius: 4rpx;
}

.notLineBox {
    /* 未选中底线样式 */
    background: transparent;
}

.swiperTtemBox {
    /* 底部内容样式 */
    height: 100vh;
    overflow: scroll;
    margin: 12rpx 0rpx;
    background: white;
    font-size: 28rpx;
}

/* 测试样例 */
.record_detail{
    margin: 20rpx 4% 40rpx 4%;
    height: 160rpx;
    width: 92%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-radius: 50rpx 50rpx 50rpx 50rpx;
    box-shadow: rgba(0, 0, 0, 0.15) -2px -2px 2px, rgba(0, 0, 0, 0.12) 2px 2px 2px;
}

.record_left{
    width: 80%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.left_action{
    font-size: 32rpx;
    font-weight: 600;
    margin: 8rpx;
}

.left_time{
    color: #bcbcbc;
    font-size: 24rpx;
    margin-left: 8rpx;
}

.record_right{
    font-weight: 600;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 38rpx;
    color: rgb(189, 49, 36);
    margin-right: 10rpx;
}