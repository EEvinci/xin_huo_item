.my_info {
    margin: 0 5% 0 5%;
    width: 90%;
}

.title{
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 2px solid rgb(90, 89, 89);
}

.title_text{
    font-size: 36rpx;
    margin-left: 20rpx;
    font-weight: 600;
}

.title_img{
    margin-left: 500rpx;
    height: 40rpx;
    width: 40rpx;
}

.info_content{
    height: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-bottom: 1px solid #cccccc;
}

.info_title{
    font-size: 34rpx;
    margin-bottom: 15rpx;
    margin-left: 20rpx;
}

.info_detail{
    color: darkgray;
    font-size: 28rpx;
    margin-left: 20rpx;
}