.title{
    margin: 0 5% 0 5%;
    width: 90%;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 2px solid rgb(90, 89, 89);
}

.title_text{
    font-size: 36rpx;
    margin-left: 20rpx;
    font-weight: 600;
}

.meeting_content{
    height: 220rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin: 30rpx 4% 0 4%;
    border: 1px solid rgba(0, 0, 0, 0.25);
    box-shadow: rgba(0, 0, 0, 0.25) 0px 2px 6px;
    border-radius: 20rpx;
}

.meeting_left{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 160rpx;
    width: 160rpx;
    margin-left: 40rpx;
}

.meeting_right{
    height: 180rpx;
    width: 420rpx;
    margin-left: 10%;
    display: flex;
    flex-direction: column;
    justify-content: space-around; 
    margin-right: 20rpx;
}

.meeting_title{
    font-size: 34rpx;
    margin-bottom: 10rpx;
}

.meeting_type{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    height: 50rpx;
    width: 160rpx;
    border-radius: 30rpx;
    color: red;
    margin-bottom: 10rpx;
    background-color: rgb(250, 126, 112, 0.3);
}

.meeting_detail{
    color: darkgray;
    font-size: 26rpx;
    margin-left: 10rpx;
}
