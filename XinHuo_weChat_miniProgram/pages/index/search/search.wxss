/* pages/index/search.wxss */
.search_bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}

.searchcion {
  margin: 16rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 5px;
  width: 12px;
  height: 12px;
  text-align: center;
}

.search_bar_form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}

.search_bar_box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.search_bar_input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.search_bar_cancel {
  margin-left: 10px;
  line-height: 28px;
  color: #D8412B;
  white-space: nowrap;
}

.search_bar_button{
  color: #D8412B;
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: 600;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.ZUCC_search {
  height: 260rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  border-bottom: 2px solid rgb(161, 159, 168);
}

.ZUCC_search_picture {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
}

.ZUCC_search_textarea {
  width: 400rpx;
  font-size: 32rpx;
}

.ZUCC_search_title {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
  margin-bottom: 10rpx;
}

.ZUCC_search_source,
.ZUCC_search_publishdate {
  font-size: 26rpx;
  color: #bbbbbb;
}

.search_tail {
  color: rgb(128, 145, 145);
  font-size: 18px;
  text-align: center;
  margin-top: 20px;
}