.title_background{
    position: absolute;
    top: 0;
    z-index: -1;
    background-color: #D8412B;
    height: 100rpx;
    width: 100%;
}

.setting_items{
    background-color: white;
    margin: 3% 3% 0% 3%;
    width: 94%;
    display: flex;
    flex-direction: column;
    padding-top: 40rpx;
    padding-bottom: 10rpx;
    border-radius: 20rpx;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 5px 10px, rgba(0, 0, 0, 0.1) 0px 3px 3px;
}

.setting_show, .setting_show1{
    margin: 0 5% 0 5%;
    display: flex;
    align-items: center;
    height: 100rpx;
}

.setting_show{
    border-bottom: 1px solid #cccccc;
}

.setting_show image,.setting_show1 image{
    height: 50rpx;
    width: 50rpx;
    margin-right: 30rpx;
}

.setting_show text,.setting_show1 text{
    font-size: 32rpx;
    color: gray;
}

.logout_button{
    width: 94%;
    margin: 300rpx 3% 0 3%;
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: hsl(0, 0%, 50%, 0.5);
    border-radius: 40rpx;
    font-weight: 600;
    font-size: 38rpx;
    color: #D8412B;
}

.login_button {
    width: 94%;
    margin: 300rpx 3% 0 3%;
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(72, 223, 53);
    border-radius: 40rpx;
    font-weight: 600;
    font-size: 38rpx;
    color: white;
}