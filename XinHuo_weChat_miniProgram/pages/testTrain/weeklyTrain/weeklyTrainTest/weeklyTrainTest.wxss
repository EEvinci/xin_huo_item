/* 答题 */

.topic {
    margin: 20rpx;
}

.topic_title {
    margin-top: 40rpx;
    background-color: #f0c9bf;
    height: 255rpx;
    border-radius: 30rpx;
    border: 1px solid #dcdddd;
    margin-bottom: 40rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    overflow: auto;
    padding: 0 0 0 10rpx;
    padding-top: 5rpx;
}

.topic_type{
    font-size: 38rpx;
    margin: 20rpx;
}

.topic_description{
    font-size: 38rpx;
    margin: 0 40rpx 0 40rpx;
}

.topic_option {
    margin-top: 20rpx;
    font-size: 32rpx;
}

.my-choosebox {
    font-size: 38rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    margin-bottom: 40rpx;
    height: 114rpx;
    display: flex;
    align-items: center;
    border-radius: 30rpx;
    border: 2px solid #de644f;
}

.radio-group {
    display: block;
}

.radio-group radio{
    margin-left: 15rpx;
}

.margin-left-xs {
    margin-left: 10rpx;
}

.topic_source {
    margin-top: 50rpx;
    color: #033F0F;
    font-size: 24rpx;
}

.topic_author {
    font-size: 24rpx;
    margin-top: 20rpx;
    height: 100rpx;
    width: 280rpx;
    background-color: #92EE8D;
    color: #0C8806;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 20rpx;
    border: 1px solid #BBBBBB;
}

.topic_hint {
    margin-top: 20rpx;
    position: absolute;
    right: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #f39800;
}

.topic_hint image {
    width: 36rpx;
    height: 36rpx;
    margin: 4rpx;
}

.topic_button {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 180rpx 7% 20rpx 7%;
    width: 86%;
    align-items: center;
}

.questionTotal{
    font-size: 52rpx;
    font-weight: 800;
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
}

.nextbutton{
    font-size: 28rpx;
}

.nextbutton1{
    font-size: 40rpx;
    font-weight: 800;
    color: #D8412B;
}

.progress_bar{
    margin: 0 6% 50rpx 6%;
    width: 88%;
}

/* 提示框 */
/*使屏幕变暗  */
.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

/*对话框 */
.commodity_attr_box {
    border-radius: 20rpx;
    height: 50%;
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
    padding-top: 20rpx;
}

.hint_title {
    width: 100%;
    display: flex;
    justify-content: center;
    font-size: 32rpx;
    font-weight: 600;
    height: 60rpx;
    border-bottom: 2px solid #BBBBBB;
}

.hint_content {
    font-size: 34rpx;
    margin: 30rpx;
}